<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ChatScreen"
    tools:context=".recyclerview.chatscreen.ChatScreenActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/chat_appbar_menu"
            app:navigationIcon="@drawable/chat_back_arrow">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/chat_avatar_bg"
                    android:contentDescription="@string/chat_user_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/imgStatusIcon"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/chat_avatar_bg"
                    android:clipToOutline="true"
                    android:contentDescription="@string/chat_user_status"
                    android:src="@drawable/status_badge"
                    app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
                    app:layout_constraintEnd_toEndOf="@id/imgAvatar"
                    tools:ignore="ImageContrastCheck,UnusedAttribute" />

                <TextView
                    android:id="@+id/tvChatUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/example_chat_user_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgAvatar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvChatId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/example_chat_id"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvChatUserName"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/etChatInput"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        tools:listitem="@layout/chat_user_message" />

    <EditText
        android:id="@+id/etChatInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/chat_input_bg"
        android:drawableEnd="@drawable/happyemoji"
        android:fontFamily="@font/roboto"
        android:hint="@string/placeholder_text"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/gray_mischka"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgBtnSendChat"
        app:layout_constraintStart_toEndOf="@id/imgBtnAddOptions"
        tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

    <ImageButton
        android:id="@+id/imgBtnSendChat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/chat_send_bg"
        android:contentDescription="@string/send_chat_message"
        android:src="@drawable/chat_send"
        app:layout_constraintBottom_toBottomOf="@id/etChatInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/etChatInput"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/imgBtnAddOptions"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:contentDescription="@string/additional_options_for_chat_message"
        android:src="@drawable/chat_add_icon"
        app:layout_constraintBottom_toBottomOf="@id/imgBtnSendChat"
        app:layout_constraintEnd_toStartOf="@id/etChatInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgBtnSendChat"
        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>