<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiwidgets.views.RadioButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/choose_chess_side_title" />

        <RadioGroup
            android:id="@+id/chooseChessSideRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/whiteChessSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chess_radio_option_1" />

            <RadioButton
                android:id="@+id/blackChessSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chess_radio_option_2" />

            <RadioButton
                android:id="@+id/noChessSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chess_radio_option_3" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>