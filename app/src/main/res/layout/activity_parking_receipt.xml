<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uiwidgets.screens.guestsecurecheckoutscreen.ParkingReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/Theme.AndroidDemoProject.GuestSecureCheckout">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/parking_receipt_menu"
                app:title="Parking Receipt"
                app:titleCentered="true"
                app:titleTextAppearance="@style/TextAppearance.GuestSecureCheckout.Title" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@id/btnMakeAnotherReservation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_white_concrete"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvThankYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:lineHeight="27dp"
                    android:text="@string/thank_you"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/tvEmailSendInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:lineHeight="18dp"
                    android:paddingHorizontal="24dp"
                    android:text="@string/email_send_info"
                    android:textColor="@color/white_gray_waterloo"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvThankYou"
                    tools:ignore="UnusedAttribute,TextContrastCheck" />

                <TextView
                    android:id="@+id/tvParkingPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:lineHeight="27dp"
                    android:text="@string/parking_pass_info"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailSendInfo"
                    tools:ignore="UnusedAttribute" />

                <include
                    android:id="@+id/cardParkingPass"
                    layout="@layout/parking_pass_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/tvParkingPass" />

                <TextView
                    android:id="@+id/tvNextSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/your_next_steps"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/cardParkingPass"
                    app:layout_constraintTop_toBottomOf="@id/cardParkingPass" />

                <include
                    android:id="@+id/doubleCheckDetailsCard"
                    layout="@layout/parking_receipt_doule_check_details_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNextSteps" />

                <include
                    android:id="@+id/displayPassCard"
                    layout="@layout/parking_receipt_display_pass_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/doubleCheckDetailsCard" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMakeAnotherReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/parking_receipt_sticky_button_bg"
                android:text="@string/make_another_reservation"
                android:textColor="@color/white"
                tools:ignore="VisualLintButtonSize" />
        </FrameLayout>
    </LinearLayout>
</layout>