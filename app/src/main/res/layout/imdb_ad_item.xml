<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imgAd"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/ad_image"
        android:scaleType="fitXY"
        android:background="@color/black"
        android:src="@drawable/ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="@string/ad"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAd" />

    <TextView
        android:id="@+id/tvAdvertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/amazon"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvAdLabel"
        app:layout_constraintStart_toEndOf="@id/tvAdLabel"
        app:layout_constraintTop_toTopOf="@id/tvAdLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>