<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:importantForAccessibility="no"
    tools:context=".uiwidgets.layouts.LinearLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white_linen"
            android:gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green_la_palma"
                android:text="@string/gravity"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/white_linen"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="start|top"
                android:background="@color/blue_cerulean"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/layout_gravity_start"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@color/red_torch"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/gravity_center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@color/green_la_palma"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/gravity_center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:background="@color/blue_cerulean"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/layout_gravity_end"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/blue_cerulean" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/red_torch"
                android:gravity="center"
                android:text="@string/_1"
                android:textColor="@color/white" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/gold_pirate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@color/blue_cerulean"
                android:gravity="center"
                android:text="@string/fixed_300dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:background="@color/red_torch"
                android:gravity="center"
                android:text="@string/_3"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/green_la_palma"
                android:gravity="center"
                android:text="@string/_1"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/blue_cerulean"
                android:gravity="center"
                android:text="@string/_1"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:background="@color/red_torch"
                android:gravity="center"
                android:text="@string/_3"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="6"
                android:background="@color/green_la_palma"
                android:gravity="center"
                android:text="@string/_6"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>