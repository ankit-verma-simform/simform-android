<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.androiddemoproject.activityfragmentintents.fragmentcommunication.FragmentCommunicationViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200"
        tools:context=".activityfragmentintents.fragmentcommunication.FFragment">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="@{viewModel.message}"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:text="@string/fragment_f" />
    </FrameLayout>
</layout>