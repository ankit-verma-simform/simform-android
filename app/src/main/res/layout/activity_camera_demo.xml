<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".permissions.camera.CameraDemoActivity">

        <ImageView
            android:id="@+id/imgFromCamera"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/image_from_camera"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toTopOf="@+id/btnPickPhotoFromCamera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/btnPickPhotoFromCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/pick_photo_from_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imgFromCamera"
            app:layout_constraintStart_toStartOf="@id/imgFromCamera"
            app:layout_constraintTop_toBottomOf="@id/imgFromCamera" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>