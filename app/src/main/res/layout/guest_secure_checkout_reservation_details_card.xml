<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/guest_secure_checkout_card_bg"
        android:paddingBottom="20dp"
        android:theme="@style/Theme.AndroidDemoProject.GuestSecureCheckout">

        <TextView
            android:id="@+id/tvStepNumber2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/guest_secure_checkout_step_bg"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/_2"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck,VisualLintOverlap" />

        <TextView
            android:id="@+id/tvReservationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/reservation_details"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tvStepNumber2"
            app:layout_constraintStart_toEndOf="@id/tvStepNumber2"
            app:layout_constraintTop_toTopOf="@id/tvStepNumber2" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_alto"
            app:layout_constraintTop_toBottomOf="@id/tvReservationDetails" />

        <TextView
            android:id="@+id/tvEnterAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/enter_after"
            android:textColor="@color/white_gray_waterloo"
            app:layout_constraintStart_toStartOf="@id/tvStepNumber2"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/btnEditEnterAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit_enter_after"
            android:src="@drawable/ic_guest_secure_checkout_pencil"
            app:layout_constraintBottom_toBottomOf="@id/tvEnterAfter"
            app:layout_constraintStart_toEndOf="@id/tvEnterAfter"
            app:layout_constraintTop_toTopOf="@id/tvEnterAfter"
            app:tint="?colorPrimary"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvDateEnterAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/date_enter_after"
            app:layout_constraintStart_toStartOf="@id/tvEnterAfter"
            app:layout_constraintTop_toBottomOf="@id/tvEnterAfter" />

        <TextView
            android:id="@+id/tvTimeEnterAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/time_enter_after"
            app:layout_constraintStart_toStartOf="@id/tvDateEnterAfter"
            app:layout_constraintTop_toBottomOf="@id/tvDateEnterAfter" />

        <TextView
            android:id="@+id/tvExitBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/exit_before"
            android:textColor="@color/white_gray_waterloo"
            app:layout_constraintBottom_toBottomOf="@id/btnEditExitBefore"
            app:layout_constraintEnd_toStartOf="@id/btnEditExitBefore"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintTop_toTopOf="@id/btnEditExitBefore"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/btnEditExitBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit_exit_before"
            android:src="@drawable/ic_guest_secure_checkout_pencil"
            app:layout_constraintBottom_toBottomOf="@id/btnEditEnterAfter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnEditEnterAfter"
            app:tint="?colorPrimary"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvDateExitBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/date_exit_before"
            app:layout_constraintStart_toStartOf="@id/tvExitBefore"
            app:layout_constraintTop_toBottomOf="@id/tvExitBefore" />

        <TextView
            android:id="@+id/tvTimeExitBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/time_exit_before"
            app:layout_constraintStart_toStartOf="@id/tvDateExitBefore"
            app:layout_constraintTop_toBottomOf="@id/tvDateExitBefore" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_guest_secure_checkout_right"
            app:layout_constraintBottom_toBottomOf="@id/tvTimeEnterAfter"
            app:layout_constraintEnd_toEndOf="@id/btnEditExitBefore"
            app:layout_constraintStart_toStartOf="@id/tvEnterAfter"
            app:layout_constraintTop_toTopOf="@id/tvEnterAfter" />

        <TextView
            android:id="@+id/tvVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24dp"
            android:text="@string/vehicle"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTimeEnterAfter"
            app:layout_constraintTop_toBottomOf="@id/tvTimeEnterAfter"
            tools:ignore="UnusedAttribute,VisualLintOverlap" />

        <TextView
            android:id="@+id/tvVehicleMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppins_medium"
            android:labelFor="@id/editVehicleMakeAndModel"
            android:text="@string/vehicle_make_and_model"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVehicle" />

        <EditText
            android:id="@+id/editVehicleMakeAndModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/guest_secure_checkout_edit_text_bg"
            android:fontFamily="@font/poppins_regular"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tvVehicleMake"
            tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tvLicensePlateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppins_medium"
            android:labelFor="@id/editLicensePlateNumber"
            android:text="@string/license_plate_number"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editVehicleMakeAndModel" />

        <EditText
            android:id="@+id/editLicensePlateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/guest_secure_checkout_edit_text_bg"
            android:fontFamily="@font/poppins_regular"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLicensePlateNumber"
            tools:ignore="TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/country"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editLicensePlateNumber" />

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/guest_secure_checkout_edit_text_bg"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            app:layout_constraintTop_toBottomOf="@id/tvCountry"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/state"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerCountry" />

        <Spinner
            android:id="@+id/spinnerState"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/guest_secure_checkout_edit_text_bg"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            app:layout_constraintTop_toBottomOf="@id/tvState"
            tools:ignore="TouchTargetSizeCheck" />

        <CheckBox
            android:id="@+id/chechboxIsOversizedVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/black_cod_gray"
            android:checked="true"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/oversized_vehicle_question"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/spinnerState"
            app:layout_constraintTop_toBottomOf="@id/spinnerState" />

        <Spinner
            android:id="@+id/spinnerTypeOfOversizedVehicle"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/guest_secure_checkout_edit_text_bg"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            app:layout_constraintTop_toBottomOf="@id/chechboxIsOversizedVehicle"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvChargesOnOversizedVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="#D8EFEF"
            android:fontFamily="@font/poppins_regular"
            android:lines="5"
            android:paddingHorizontal="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/charges_on_oversized_vehicles_info"
            android:textColor="#077579"
            app:layout_constraintTop_toBottomOf="@id/spinnerTypeOfOversizedVehicle"
            tools:ignore="VisualLintBounds,VisualLintLongText" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="20dp"
            android:text="@string/next"
            app:layout_constraintTop_toBottomOf="@id/tvChargesOnOversizedVehicle"
            tools:ignore="VisualLintButtonSize,VisualLintBounds" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>