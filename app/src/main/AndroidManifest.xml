<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidDemoProject"
        tools:targetApi="31">

        <!-- activity, fragment, intents -->
        <activity
            android:name=".activityfragmentintents.pendingintents.PendingIntentDestinationActivity"
            android:exported="false" />
        <activity
            android:name=".activityfragmentintents.pendingintents.PendingIntentDemoActivity"
            android:exported="false"
            android:label="Pending Intents" />
        <activity
            android:name=".activityfragmentintents.fragmentcommunication.FragmentCommunicationActivity"
            android:exported="false"
            android:label="Communication" />
        <activity
            android:name=".activityfragmentintents.fragments.FragmentsDemoActivity"
            android:exported="false"
            android:label="Fragments" />
        <activity
            android:name=".activityfragmentintents.intent.ReturnWithResultDemoActivity"
            android:exported="false" />
        <activity
            android:name=".activityfragmentintents.intent.ReceiveTextFromIntentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityfragmentintents.intent.IntentBrowserDemoActivity"
            android:exported="false"
            android:label="Browser Demo" />
        <activity
            android:name=".activityfragmentintents.intent.IntentDemoActivity"
            android:exported="false"
            android:label="Intents" />
        <activity
            android:name=".activityfragmentintents.activitylifecycle.ActivityLifecycleDemoActivity"
            android:exported="false"
            android:label="Activity Lifecycle" />
        <activity
            android:name=".activityfragmentintents.AndroidConceptsActivity"
            android:exported="false"
            android:label="Android Concepts" />

        <!-- other important views -->
        <activity
            android:name=".importantviews.webview.WebViewActivity"
            android:exported="false"
            android:label="Web View" />
        <activity
            android:name=".importantviews.nestedscrollbehaviour.NestedScrollBehaviourActivity"
            android:exported="false"
            android:label="Nested Scroll View Behaviour" />
        <activity
            android:name=".importantviews.multiplescrollview.MultipleScrollViewActivity"
            android:exported="false"
            android:label="Multiple Scroll Views" />
        <activity
            android:name=".importantviews.nestedscrollviews.NestedScrollViewsActivity"
            android:exported="false"
            android:label="Nested Scroll Views" />
        <activity
            android:name=".importantviews.searchdebounce.SearchDebounceActivity"
            android:exported="false"
            android:label="Search with debounce" />
        <activity
            android:name=".importantviews.search.SearchActivity"
            android:exported="false"
            android:label="Search Menu" />
        <activity
            android:name=".importantviews.ImportantViewsActivity"
            android:exported="false"
            android:label="Important Views Activity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>